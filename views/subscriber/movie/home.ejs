<!DOCTYPE html>
<html lang="en"></html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Netflix</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js" integrity="sha384-3LK/3kTpDE/Pkp8gTNp2gR/2gOiwQ6QaO7Td0zV76UFJVhqLl4Vl3KL1We6q6wR9" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="../css/home.css">
  <script>
    let submenu = document.getElementById("submenu-wrap")
    function togglemenu(){
      submenu.classList.toggle("open-class")
    }
  </script>
</head>
<body>
  <div class="wrapper">

    <!-- HEADER -->
    <header>
      <div class="netflixLogo">
        <a id="logo" href="/subscriber/movie"><img src="https://github.com/carlosavilae/Netflix-Clone/blob/master/img/logo.PNG?raw=true" alt="Logo Image"></a>
      </div>      
      <nav class="main-nav">
          <a href="/subscriber/movie">Home</a>
          <a href="/subscriber/movie#tvShows">TV Shows</a>
          <a href="/subscriber/movie#movies">Movies</a>
          <a href="/subscriber/movie#originals">Originals</a>
          <a href="/chat">Contact Us</a>                  
      </nav>
      <nav class="sub-nav">
        <ul>
          <li>
            <div class="group">
              <svg class="icon" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
              <input placeholder="Search" type="search" class="input" id="search">
            </div>
          </li>
          <li>
            <div class="action">
            <div class="profile" onclick="menuToggle();">
                <img src="../../../user.png" alt="">
            </div>

                <div class="menu">
                    <h3>
                      <% if(user) { %> 
                        <%= user.email %>
                        <% if(user.isSubscriber) { %> 
                          <div>
                            Subscribed Member
                          </div>
                        <% } else { %>
                          <div>
                            UnSubscribed Member
                        </div>
                        <% } %> 
                      <% } %> 
                    </h3>
                    <ul>
                        <li>
                          <% if (user) { %> 
                            <a href="/user/account">Edit Account</a>
                          <% } %> 
                        </li>
                        <li>
                          <% if(user) { %> 
                            <a href="/user/logout">Log Out</a>
                          <% } else { %> 
                            <a href="/user/login">Log In</a>
                          <% } %> 
                        </li>
                    </ul>
                </div>
            </div>
            <script>
                function menuToggle(){
                    const toggleMenu = document.querySelector('.menu');
                    toggleMenu.classList.toggle('active')
                }
            </script>
          </li>
        </ul>
        <!-- <a href="#"><i class="fas fa-bell sub-nav-logo"></i></a> -->
        <!-- <a href="#">Account</a> -->
        <!-- <a href="#"><i class="fas fa-search sub-nav-logo"></i></a> -->   
      </nav>      
    </header>
    <!-- END OF HEADER -->
    
    <!-- MAIN CONTAINER -->
    <section class="main-container" >
      <div class="location" id="home">
        <h1 id="home">Popular on Netflix</h1>
        <div class="box">
          <% movies.forEach(el=> { %>
            <% if(el.category == "popular") {%>
              <a href="/subscriber/movie/<%= el.id %>" class="kotak">
                <img src="<%=el.link%>" class="name" alt="<%= el.name %>">
              </a>
            <% } %>       
          <% }) %>   
        </div>
      </div>
      

      <h1 id="myList">Trending Now</h1>
      <div class="box">
        <% movies.forEach(el=> { %>
          <% if(el.category == "trend") {%>
            <a href="/subscriber/movie/<%= el.id %>" class="kotak">
              <img src="<%=el.link%>" class="name" alt="<%= el.name %>">
            </a>
          <% } %>       
        <% }) %>                 
      </div>
      
      <h1 id="tvShows">TV Shows</h1>
      <div class="box">
        <% movies.forEach(el=> { %>
          <% if(el.category == "tvshow") {%>
            <a href="/subscriber/movie/<%= el.id %>" class="kotak">
              <img src="<%=el.link%>" class="name" alt="<%= el.name %>">
            </a>
          <% } %>       
        <% }) %>         
      </div>
      

      <h1 id="movies">Blockbuster Action & Adventure</h1>
      <div class="box">
        <% movies.forEach(el=> { %>
          <% if(el.category == "action") {%>
            <a href="/subscriber/movie/<%= el.id %>" class="kotak">
              <img src="<%=el.link%>" class="name" alt="<%= el.name %>">
            </a>
          <% } %>       
        <% }) %>
      </div>

      <h1 id="originals">Netflix Originals</h1>
      <div class="box">
        <% movies.forEach(el=> { %>
          <% if(el.category == "original") {%>
            <a href="/subscriber/movie/<%= el.id %>" class="kotak">
              <img src="<%=el.link%>" class="name" alt="<%= el.name %>">
            </a>
          <% } %>       
        <% }) %>             
      </div>
    <!-- END OF MAIN CONTAINER -->

    <!-- LINKS -->
    <section class="link">
      <div class="logos">
        <a href="#"><i class="fab fa-facebook-square fa-2x logo"></i></a>
        <a href="#"><i class="fab fa-instagram fa-2x logo"></i></a>
        <a href="#"><i class="fab fa-twitter fa-2x logo"></i></a>
        <a href="#"><i class="fab fa-youtube fa-2x logo"></i></a>
      </div>
      <div class="sub-links">
        <ul>
          <li><a href="#">Audio and Subtitles</a></li>
          <li><a href="#">Audio Description</a></li>
          <li><a href="#">Help Center</a></li>
          <li><a href="#">Gift Cards</a></li>
          <li><a href="#">Media Center</a></li>
          <li><a href="#">Investor Relations</a></li>
          <li><a href="#">Jobs</a></li>
          <li><a href="#">Terms of Use</a></li>
          <li><a href="#">Privacy</a></li>
          <li><a href="#">Legal Notices</a></li>
          <li><a href="#">Corporate Information</a></li>
          <li><a href="/chat">Contact Us</a></li>
        </ul>
      </div>
    </section>
    <!-- END OF LINKS -->

    <!-- FOOTER -->
    <footer>
      <p>&copy 1997-2018 Netflix, Inc.</p>
      <p>Carlos Avila &copy 2018</p>
    </footer>
  </div>
  <script src="../../../js/home.js"></script>
</body>
</html>